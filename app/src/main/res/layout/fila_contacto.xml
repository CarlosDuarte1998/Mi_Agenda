<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="Nombre Contacto"
        android:id="@+id/tvTituloFilaContacto"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/tvTelefonoFilaContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTituloFilaContacto"
        android:layout_alignStart="@+id/tvTituloFilaContacto"
        android:text="Telefono"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloFilaContacto"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tvCorreoFilaContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTituloFilaContacto"
        android:layout_alignStart="@+id/tvTituloFilaContacto"
        android:text="correo"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"

        app:layout_constraintTop_toBottomOf="@+id/tvTelefonoFilaContacto"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnVerContacto"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/tvTelefonoFilaContacto"
        android:layout_alignEnd="@+id/tvTelefonoFilaContacto"
        android:background="#1c3d57"
        android:text="Ver Contacto"
        android:textColor="#FFFFFF"
        android:textSize="14dp"

        app:layout_constraintTop_toBottomOf="@+id/tvCorreoFilaContacto"
        tools:layout_editor_absoluteX="-16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>